generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// Define your database schema here
model Event{
  id    Int    @id @default(autoincrement())
  name  String
  location String
  image String
  description String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  slug  String  @unique
  time String
  agenda Json?
  date String
  venue String
  overview String
  bookings Booking[]
  organizer String
  tags String[]
  audience String
  mode String
} 
model Booking{
  id    Int    @id @default(autoincrement())
  event   Event  @relation(fields: [eventId], references: [id])
  eventId Int
  userEmail String
  numberOfTickets Int
  bookingDate DateTime @default(now())
}
